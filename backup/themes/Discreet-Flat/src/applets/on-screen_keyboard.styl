#keyboard
	background-color: rgba(0,0,0,0.5)

.keyboard-layout
	spacing: 10px
	padding: 10px

.keyboard-row
	spacing: 15px

.keyboard-key
	min-height: 30px
	min-width: 30px
	font-size: 14pt
	font-weight: bold
	border-radius: 5px
	border: 1px solid #888
	color: white
	background: rgba(48, 48, 48, 0.85)
	box-shadow: 1px 1px 3px #555

	&:grayed
		color: #808080
		border-color: #808080

	&:checked, &:hover
		background: #282828
		border: 1px solid white

	&:active
		background: #ddd
		color: black
		border: 1px solid #ddd

.keyboard-subkeys
	color: white
	padding: 5px
	-arrow-border-radius: 4px
	-arrow-background-color: rgba(34,34,34,0.7)
	-arrow-border-width: 1px
	-arrow-border-color: rgba(68,68,68,0.7)
	-arrow-base: 20px
	-arrow-rise: 10px
	-boxpointer-gap: 5px
