@require "colors.styl"

#altTabPopup
	padding: 8px
	spacing: 16px

.switcher-list, // alt-tab
.window-list-preview // hover in the menu bar
	background: $dark
	border: 1px $light solid
	border-radius: 3px
	padding: 20px
	font-size: 9pt
	color: white
	text-shadow: black 0px 0px 2px

.switcher-list-item-container
	spacing: 8px

.thumbnail-scroll-gradient-left

.thumbnail-scroll-gradient-right

.switcher-list, .grouped-window-list-thumbnail-menu
	.item-box
		padding: 8px
		border-radius: 4px

		&:outlined
			padding: 6px
			border: 2px solid rgba(85,85,85,1.0)

		&:selected
			background: $light

	.thumbnail-box
		padding: 2px
		spacing: 4px

	.thumbnail
		width: 256px

	.separator
		width: 1px
		background: rgba(255,255,255,0.33)

.ripple-box
	width: 104px
	height: 104px
	background-image: url("corner-ripple.svg")

	&:rtl
		background-image: url("corner-ripple.svg")

.switcher-arrow
	border-color: rgba(0,0,0,0)
	color: #808080

	&:highlighted
		border-color: rgba(0,0,0,0)
		color: white

.switcher-preview-backdrop
	background-color: rgba(25,25,25,0.65)
