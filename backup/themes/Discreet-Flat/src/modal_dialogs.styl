@require "colors.styl"

.modal-dialog
	font-size: 12pt
	border-radius: 3px
	background-color: $dark
	border: 1px solid $light
	color: #babdb6
	padding-right: 42px
	padding-left: 42px
	padding-bottom: 30px
	padding-top: 30px

.modal-dialog-button-box
	spacing: 21px

.modal-dialog-button
	font-size: 11pt
	color: white
	margin-left: 10px
	margin-right: 10px
	padding: 4px 32px 5px

	&:disabled
		color: rgb(60, 60, 60)

	&:focus
		padding: 3px 31px 4px


/* Info OSD popup */
.info-osd
	font-size: 18pt
	border-radius: 4px
	background-color: $dark
	border: 2px solid $light
	box-shadow: 0 0 8px 2px rgba(0, 0, 0, 0.5)
	color: #ddd
	padding-right: 20px
	padding-left: 20px
	padding-bottom: 20px
	padding-top: 20px
	text-align: center
